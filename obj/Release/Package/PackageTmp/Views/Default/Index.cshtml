@using TravelTripProject1.Models.Siniflar
@model Anasayfa
@{
    ViewBag.Title = "Anasayfa";
    Layout = "~/Views/Shared/_TestLayout.cshtml";
}

<div class="jumbotron" style="background: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.5)), url('/web/images/anasayfa-bg.jpg') no-repeat center; background-size: cover; color: white; text-align: center; padding: 150px 20px; margin-bottom:0; height: 600px; display: flex; align-items: center; justify-content: center; flex-direction: column;">
    <h1 style="text-shadow: 2px 2px 10px #000; font-weight:800; font-size: 50px; text-transform: uppercase;">Keşfetmeye Hazır Mısın?</h1>
    <p style="text-shadow: 1px 1px 5px #000; font-size:20px; margin: 20px 0; max-width: 800px;">
        Yapay zeka asistanımız senin için en uygun rotayı saniyeler içinde planlasın.
    </p>
    <button type="button" class="btn btn-warning btn-lg" data-toggle="modal" data-target="#myAiModal" style="margin-top:30px; font-weight:bold; padding: 15px 60px; font-size: 18px; border-radius: 50px; box-shadow: 0 10px 30px rgba(255, 193, 7, 0.5);">
        <i class="glyphicon glyphicon-flash"></i> Tur Öner
    </button>
</div>

<div id="myAiModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content" style="border-radius: 15px; overflow: hidden;">
            <div class="modal-header" style="background-color: #f8f9fa;">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title" style="color:#333; font-weight:bold;">Seyahat Asistanı</h4>
            </div>
            <div class="modal-body" id="AiModalContent" style="padding: 0;">
                @Html.Action("YapayZeka", "Default")
            </div>
        </div>
    </div>
</div>

<div class="content" style="background-color: #f9f9f9; padding: 60px 0;">
    <div class="container">

        <div class="text-center" style="text-align: center; margin-bottom: 40px;">
            <h3 style="color:#333; font-weight: 800; font-size: 30px; text-transform: uppercase;">Popüler Turlar</h3>
            <div style="width: 60px; height: 4px; background: #0094ff; margin: 15px auto;"></div>
        </div>

        <div class="row">
            @foreach (var x in Model.Deger2)
            {
                <div class="col-md-4" style="margin-bottom:30px;">
                    <div style="background: white; border-radius: 10px; overflow: hidden; box-shadow: 0 5px 15px rgba(0,0,0,0.1); transition: transform 0.3s;">
                        <img src="@x.Resim" style="width:100%; height:200px; object-fit:cover;" />
                        <div style="padding:15px;">
                            <span style="background:#0094ff; color:white; padding:3px 10px; border-radius:15px; font-size:11px;">@x.Bolge</span>
                            <h4 style="margin-top:10px; font-weight:bold;">@x.Baslik</h4>
                            <p style="font-size:13px; color:#888;"><i class="glyphicon glyphicon-time"></i> @x.Sure</p>
                            <hr />
                            <div class="row">
                                <div class="col-md-6"><h4 style="color:#27ae60; font-weight:bold;">@x.Fiyat ₺</h4></div>
                                <div class="col-md-6 text-right"><a href="/Tur/TurDetay/@x.ID" class="btn btn-default btn-sm" style="border-color:#0094ff; color:#0094ff;">İncele</a></div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div style="text-align:center; margin-bottom: 60px;">
            <a href="/Tur/Index" class="btn btn-primary btn-lg" style="border-radius: 30px; padding: 10px 40px;">Tüm Turları Gör</a>
        </div>


        <div class="text-center" style="text-align: center; margin-bottom: 40px;">
            <h3 style="color:#333; font-weight: 800; font-size: 30px; text-transform: uppercase;">Seyahat Rehberi</h3>
            <div style="width: 60px; height: 4px; background: #ff6a00; margin: 15px auto;"></div>
        </div>

        <div class="row">
            @foreach (var x in Model.Deger1)
            {
                <div class="col-md-4" style="margin-bottom: 30px;">
                    <div style="background: white; border-radius: 10px; overflow: hidden; box-shadow: 0 5px 20px rgba(0,0,0,0.05);">
                        <div style="height: 200px; overflow: hidden;">
                            <img src="@x.BlogImage" style="width: 100%; height: 100%; object-fit: cover;" />
                        </div>
                        <div style="padding: 20px;">
                            <span style="font-size: 12px; color: #999;"><i class="glyphicon glyphicon-calendar"></i> @x.Tarih.ToString("dd.MM.yyyy")</span>
                            <h4 style="font-weight: bold; margin: 10px 0; height: 50px; overflow: hidden;">
                                <a href="/Blog/BlogDetay/@x.ID" style="color: inherit; text-decoration: none;">@x.Baslik</a>
                            </h4>
                            <p style="color: #666; font-size: 14px; height: 60px; overflow: hidden;">
                                @if (x.Aciklama.Length > 100)
                                {@x.Aciklama.Substring(0, 100) <span>...</span> }
                            else
                            { @x.Aciklama}
                            </p>
                            <a href="/Blog/BlogDetay/@x.ID" class="btn btn-default" style="margin-top: 15px; border-color: #ff6a00; color: #ff6a00; width: 100%;">OKU</a>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div style="text-align:center; margin-top: 20px;">
            <a href="/Blog/Index" class="btn btn-primary btn-lg" style="border-radius: 30px; padding: 10px 40px;">
                Tüm Blogları İncele
            </a>
        </div>

    </div>
</div>