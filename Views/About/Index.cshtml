@model TravelTripProject1.Models.Siniflar.Hakkimizda
@{
    ViewBag.Title = "Hakkımızda";
    Layout = "~/Views/Shared/_TestLayout.cshtml";
}

<div class="jumbotron" style="background: linear-gradient(rgba(0,0,0,0.7), rgba(0,0,0,0.7)), url('https://images.unsplash.com/photo-1488646953014-85cb44e25828?q=80&w=1335&auto=format&fit=crop') no-repeat center; background-size: cover; color: white; text-align: center; padding: 100px 20px; margin-bottom:0; height: 350px; display: flex; align-items: center; justify-content: center; flex-direction: column;">
    <h1 style="text-shadow: 2px 2px 10px #000; font-weight:800; font-size: 40px; text-transform: uppercase; letter-spacing: 2px;">Bizim Hikayemiz</h1>
    <p style="text-shadow: 1px 1px 5px #000; font-size:18px; margin: 20px 0; max-width: 700px;">
        Dünyayı keşfetme tutkusuyla başlayan, sizinle büyüyen bir yolculuk.
    </p>
</div>

<div class="content" style="background-color: #fff; padding: 80px 0;">
    <div class="container">

        @if (Model != null)
        {
            <div class="row" style="display: flex; align-items: center; flex-wrap: wrap;">
                <div class="col-md-6">
                    <div style="position: relative;">
                        <img src="@(string.IsNullOrEmpty(Model.FotoUrl) ? "https://via.placeholder.com/600x400" : Model.FotoUrl)" alt="Ekibimiz" style="width: 100%; border-radius: 15px; box-shadow: 0 10px 30px rgba(0,0,0,0.15);">
                    </div>
                </div>
                <div class="col-md-6" style="padding-left: 30px;">
                    <h5 style="color: #ff6a00; font-weight: bold; text-transform: uppercase;">Biz Kimiz?</h5>
                    <h2 style="font-weight: 800; color: #333; margin-bottom: 25px; margin-top: 15px; line-height: 1.4;">
                        Hayallerinizi Rotaya Dönüştürüyoruz.
                    </h2>
                    <p style="font-size: 16px; line-height: 1.8; color: #666; margin-bottom: 30px;">
                        @Model.Aciklama
                    </p>
                    <a href="/Iletisim/Index" class="btn btn-primary btn-lg" style="border-radius: 30px; padding: 12px 35px; font-weight: bold;">Bizimle İletişime Geçin</a>
                </div>
            </div>

            <div class="row" style="margin-top: 100px; text-align: center;">
                <div class="col-md-3">
                    <i class="glyphicon glyphicon-user" style="font-size: 50px; color: #ff6a00; margin-bottom: 15px;"></i>
                    <h2 style="font-weight: 800; color: #333;">10K+</h2>
                    <p style="color: #777;">Mutlu Gezgin</p>
                </div>
                <div class="col-md-3">
                    <i class="glyphicon glyphicon-map-marker" style="font-size: 50px; color: #ff6a00; margin-bottom: 15px;"></i>
                    <h2 style="font-weight: 800; color: #333;">50+</h2>
                    <p style="color: #777;">Farklı Rota</p>
                </div>
                <div class="col-md-3">
                    <i class="glyphicon glyphicon-calendar" style="font-size: 50px; color: #ff6a00; margin-bottom: 15px;"></i>
                    <h2 style="font-weight: 800; color: #333;">5 Yıl</h2>
                    <p style="color: #777;">Sektör Tecrübesi</p>
                </div>
                <div class="col-md-3">
                    <i class="glyphicon glyphicon-star" style="font-size: 50px; color: #ff6a00; margin-bottom: 15px;"></i>
                    <h2 style="font-weight: 800; color: #333;">4.9/5</h2>
                    <p style="color: #777;">Müşteri Memnuniyeti</p>
                </div>
            </div>

            <div class="row" style="margin-top: 80px;">
                <div class="col-md-6">
                    <div style="background: #f9f9f9; padding: 40px; border-radius: 15px; border-left: 5px solid #0094ff; height: 100%; min-height: 250px;">
                        <h3 style="font-weight: 800; color: #333; margin-bottom: 20px;">
                            <i class="glyphicon glyphicon-eye-open"></i> VİZYONUMUZ
                        </h3>
                        <p style="font-size: 16px; color: #555; line-height: 1.6;">
                            @Model.Vizyon
                        </p>
                    </div>
                </div>

                <div class="col-md-6">
                    <div style="background: #f9f9f9; padding: 40px; border-radius: 15px; border-left: 5px solid #ff6a00; height: 100%; min-height: 250px;">
                        <h3 style="font-weight: 800; color: #333; margin-bottom: 20px;">
                            <i class="glyphicon glyphicon-plane"></i> MİSYONUMUZ
                        </h3>
                        <p style="font-size: 16px; color: #555; line-height: 1.6;">
                            @Model.Misyon
                        </p>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="alert alert-warning text-center">
                Henüz "Hakkımızda" bilgisi girilmemiş. Lütfen Admin panelinden içerik ekleyiniz.
            </div>
        }

    </div>
</div>