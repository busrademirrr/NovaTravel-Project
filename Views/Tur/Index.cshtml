@using TravelTripProject1.Models.Siniflar
@model List<TurPaketleri>

@{
    ViewBag.Title = "Turlarımız";
    Layout = "~/Views/Shared/_TestLayout.cshtml";
}

<div style="background-color: #f8f9fa; padding: 40px 0; text-align: center; border-bottom: 1px solid #e9ecef;">
    <div class="container">
        <h2 style="color: #2c3e50; font-weight: 800; text-transform: uppercase; margin-bottom: 10px; letter-spacing: 1px;">Keşfedilmeyi Bekleyen Rotalar</h2>
        <p style="color: #7f8c8d; font-size: 18px; max-width: 600px; margin: 0 auto;">Türkiye'nin en özel noktalarına düzenlediğimiz, konfor ve macera dolu tur paketlerimizi inceleyin.</p>
    </div>
</div>

<div class="content" style="background-color: #fff; padding: 60px 0;">
    <div class="container">
        <div class="row">

            @foreach (var x in Model)
            {
                <div class="col-md-4 col-sm-6" style="margin-bottom: 40px;">
                    <div class="tour-card" style="border: none; border-radius: 15px; overflow: hidden; box-shadow: 0 10px 25px rgba(0,0,0,0.08); transition: transform 0.3s ease, box-shadow 0.3s ease; background: #fff; height: 100%;">

                        <div style="position: relative; overflow: hidden; height: 250px;">
                            <a href="/Tur/TurDetay/@x.ID">
                                <img src="@x.Resim" style="width: 100%; height: 100%; object-fit: cover; transition: transform 0.5s ease;" onmouseover="this.style.transform='scale(1.1)'" onmouseout="this.style.transform='scale(1)'" />
                            </a>
                            <div style="position: absolute; top: 15px; left: 15px; background: rgba(0,0,0,0.6); color: #fff; padding: 5px 15px; border-radius: 20px; font-size: 12px; font-weight: 600; text-transform: uppercase;">
                                <i class="glyphicon glyphicon-map-marker"></i> @x.Bolge
                            </div>
                        </div>

                        <div style="padding: 25px;">
                            <div style="margin-bottom: 10px; color: #ff6a00; font-size: 13px; font-weight: 600;">
                                <i class="glyphicon glyphicon-time"></i> @x.Sure
                            </div>

                            <h3 style="margin: 0 0 15px 0; font-size: 22px; font-weight: 700; line-height: 1.3;">
                                <a href="/Tur/TurDetay/@x.ID" style="color: #2c3e50; text-decoration: none;">@x.Baslik</a>
                            </h3>

                            <hr style="border-top: 1px solid #f1f1f1; margin: 20px 0;" />

                            <div class="row" style="display: flex; align-items: center;">
                                <div class="col-xs-6">
                                    <span style="font-size: 12px; color: #999; display: block;">Kişi Başı</span>
                                    <span style="font-size: 20px; color: #27ae60; font-weight: 800;">@x.Fiyat ₺</span>
                                </div>
                                <div class="col-xs-6 text-right">
                                    <a href="/Tur/TurDetay/@x.ID" class="btn btn-primary" style="border-radius: 50px; padding: 8px 25px; font-weight: 600; box-shadow: 0 4px 10px rgba(0, 148, 255, 0.3);">
                                        İncele <i class="glyphicon glyphicon-arrow-right"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</div>

<style>
    .tour-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 20px 40px rgba(0,0,0,0.15) !important;
    }
</style>