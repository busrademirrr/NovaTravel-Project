@using TravelTripProject1.Models.Siniflar
@model List<Blog>
<div class="box1-left">
    @foreach (var x in Model)
    {
    <div class="bot-img">
        <img src="@x.BlogImage" style="width:120px; height:60px;" alt="" />
    </div>
    <div class="bot-desc1">
        <p>@(x.Aciklama.Length > 30 ? x.Aciklama.Substring(0, 30) : x.Aciklama)...</p>
    </div>
    <div class="clear"></div>
    }
</div>