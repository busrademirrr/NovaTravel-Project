@using TravelTripProject1.Models.Siniflar
@model List<Rehber>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_TestLayout.cshtml";
}

<div class="content">
    <div class="wrap">
        <div class="about">
            <h3 style="color:#0094ff; margin-bottom:20px;">Popüler Destinasyonlar ve Rehber</h3>
            <p style="margin-bottom:30px;">Sizin için seçtiğimiz en iyi oteller, müzeler ve restoranlar. Bütçenize uygun planlamayı buradan yapabilirsiniz.</p>

            <div class="box1-left">
                @foreach (var x in Model)
                {
                    <div class="bot-img" style="float:none; width:100%; margin-bottom:40px; border:1px solid #e1e1e1; padding:20px; border-radius:10px; background-color:#fff;">
                        <div class="row">
                            <div class="col-md-6">
                                <a href="/Rehber/RehberDetay/@x.ID">
                                    <img src="@x.GorunurGorsel" style="width:100%; height:300px; object-fit:cover; border-radius:5px;" alt="@x.Baslik" />
                                </a>
                            </div>

                            <div class="col-md-6">
                                <a href="/Rehber/RehberDetay/@x.ID" style="text-decoration:none; color:inherit;">
                                    <h4 style="font-size:24px; margin-top:0;">@x.Baslik <span style="font-size:14px; color:#999; display:block;">(@x.Kategori)</span></h4>
                                </a>

                                <p style="margin-top:15px; color:#555; line-height:1.6;">@x.Aciklama</p>

                                <div style="margin-top:20px; background-color:#f4faff; padding:15px; border-left:5px solid #0094ff; border-radius:3px;">
                                    <p style="margin:0; font-size:16px;"><strong>💰 Tahmini Maliyet:</strong> <span style="color:#2ecc71; font-weight:bold;">@x.TahminiMaliyet</span></p>
                                    <p style="margin:5px 0 0 0; font-size:16px;"><strong>⭐ Puan:</strong> <span style="color:#f1c40f; font-weight:bold;">@x.Puan / 10</span></p>
                                </div>
                            </div>
                        </div>

                        <div class="row" style="margin-top:25px;">
                            <div class="col-md-12">
                                <h5 style="border-bottom:1px solid #ddd; padding-bottom:10px; margin-bottom:15px;">Konum Haritası</h5>
                                <div style="width:100%; overflow:hidden; border-radius:5px;">
                                    @Html.Raw(x.HaritaKonum)
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="clear"></div>
        </div>
    </div>
</div>